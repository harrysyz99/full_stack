{
  "name": "ai-trading-platform",
  "version": "1.0.0",
  "description": "AI-Oriented Trading Platform - Discussion board with AI-powered features",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
